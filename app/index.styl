@import "~normalize.css/normalize.css"
@import "~styl/fonts"
@import "~styl/colors"
@import "~styl/buttons"
@import "~styl/more-links-and-buttons"
@import "~styl/media-query-variables"
@import "~styl/loading-dots"
@import "~styl/form"
@import "~styl/inputs"

html
  box-sizing border-box

*, *::after, *::before
  box-sizing inherit

baseFontSize = 16px
navHeight = 2.5em

::selection
  background selectionColor
  textShadowToCropUnderline selectionColor

html
  background lightGray
  color textColor

html, body
  width 100%
  min-height 100vh

body
  padding-top navHeight
  overflow-y scroll

svg
  display block
  width 100%
  height 100%

body
  font-family sansSerifFonts
  font-size baseFontSize

[contenteditable]
  div, footer, header, section
    display block

[data-flow]
  display flex

[data-flow="column"]
  flex-flow column nowrap

[data-flow="row"]
  flex-flow row

.main-nav
  background #fff
  position fixed
  top 0
  right 0
  bottom 0
  left 0
  z-index 50
  height navHeight
  box-shadow 0 1px rgba(0, 0, 0, .15)

  .nav-item
    height 100%
    padding 0 1.5em
    border-left 1px solid transparent
    cursor pointer

    &:first-child
      margin-left auto

    &:last-child
      margin-right auto

    &:hover
      background rgba(0, 0, 0, .05)

    & + .nav-item
      border-left-color rgba(0, 0, 0, .05)

main
  width 1280px
  max-width 100%
  margin-left auto
  margin-right auto
  padding 3em

  @media (max-width 1000px)
    padding 2em

  @media mobileMaxWidthQuery
    padding 1.25em

  > h1:first-child
    margin-top 0

.main-footer
  a.made-by.button
    display block
    width 6em
    max-width 100%
    margin 0 auto .5em
    padding 1.1em
    text-align center
    opacity 1
    transition opacity .3s ease
    will-change opacity
    background #ccc
    box-shadow none

    > *
      opacity .4

    .label
      display block
      font-size .7em
      font-weight 100
      text-transform uppercase
      letter-spacing .1em
      text-indent @letter-spacing
      margin-bottom 1em

    svg
      display block
      width 100%
      height auto

      path
        fill currentColor

.box
  background-color #fff
  border-radius 6px
  padding 0 1em
  line-height 1.65

.content
  flex-flow row

  @media (max-width 1000px)
    flex-flow column

.blog-posts
  flex 1 1 auto

  .post .timestamp
    color mutedTextColor

.news
  flex 0 0 33%
  margin-left 1em

  @media (max-width 1000px)
    margin 1em 0 0
